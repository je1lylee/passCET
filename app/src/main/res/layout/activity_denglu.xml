<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DengluActivity"
    android:background="@drawable/denglu"
    android:tileMode="repeat"
    >

    <LinearLayout
        android:id="@+id/a1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/yuanjiaoshurukuang"
        android:layout_centerVertical="true"
        >
        <!--输入框-->
        <EditText
            android:id="@+id/username"
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:hint="请输入您的邮箱"
            android:textColorHint="#ffffff"
            android:textSize="15sp"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:singleLine="true"/>

        <top.linxixiangxin.passcet.CountDownTimerButton
            android:id="@+id/DL_BT_yanzheng"
            android:layout_width="105dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:background="#00000000"
            android:text="获取验证码"
            android:textSize="14sp"
            android:textColor="#ffff"
            android:layout_weight="1"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/a2"
        android:layout_below="@+id/a1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/yuanjiaoshurukuang">

        <EditText
            android:id="@+id/DL_password"
            android:layout_below="@id/a1"
            android:layout_height="50dp"
            android:layout_width="270dp"
            android:hint="请输入您的验证码"
            android:textColorHint="#ffffff"
            android:textSize="15sp"
            android:layout_gravity="center"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_below="@+id/a2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="50dp"
        android:gravity="center_vertical">


        <Button
            android:id="@+id/btn_denglu_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_below="@+id/a2"
            android:layout_marginTop="30dp"
            android:layout_gravity="center"
            android:text="登录"
            android:textSize="16sp"
            android:textColor="#fcfcfc"
            android:background="@drawable/denglude"/>
    <Button
        android:id="@+id/btn_denglu_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_below="@+id/login"
        android:layout_gravity="center"
        android:text="注册"
        android:textSize="16sp"
        android:textColor="#9EA5E4"
        android:background="#00000000"/>

    </LinearLayout>

</RelativeLayout>
